{
  "name": "@mimic-fi/v2-deployments",
  "version": "0.0.1",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "lint": "eslint . --ext .ts",
    "test:task:fork": "ts-node ./src/tests.ts --fork",
    "test:task:fork:goerli": "ts-node ./src/tests.ts --fork --network goerli",
    "test:task:fork:mumbai": "ts-node ./src/tests.ts --fork --network mumbai",
    "test:task:fork:mainnet": "ts-node ./src/tests.ts --fork --network mainnet",
    "test:task:fork:polygon": "ts-node ./src/tests.ts --fork --network polygon",
    "test:task:fork:optimism": "ts-node ./src/tests.ts --fork --network optimism",
    "test:task:fork:arbitrum": "ts-node ./src/tests.ts --fork --network arbitrum",
    "test:task:fork:gnosis": "ts-node ./src/tests.ts --fork --network gnosis",
    "test:task:fork:avalanche": "ts-node ./src/tests.ts --fork --network avalanche",
    "test:task:fork:bsc": "ts-node ./src/tests.ts --fork --network bsc",
    "test:task:fork:fantom": "ts-node ./src/tests.ts --fork --network fantom",
    "test:task:deployed": "ts-node ./src/tests.ts --deployed",
    "test:task:deployed:goerli": "ts-node ./src/tests.ts --deployed --network goerli",
    "test:task:deployed:mumbai": "ts-node ./src/tests.ts --deployed --network mumbai",
    "test:task:deployed:mainnet": "ts-node ./src/tests.ts --deployed --network mainnet",
    "test:task:deployed:polygon": "ts-node ./src/tests.ts --deployed --network polygon",
    "test:task:deployed:optimism": "ts-node ./src/tests.ts --deployed --network optimism",
    "test:task:deployed:arbitrum": "ts-node ./src/tests.ts --deployed --network arbitrum",
    "test:task:deployed:gnosis": "ts-node ./src/tests.ts --deployed --network gnosis",
    "test:task:deployed:avalanche": "ts-node ./src/tests.ts --deployed --network avalanche",
    "test:task:deployed:bsc": "ts-node ./src/tests.ts --deployed --network bsc",
    "test:task:deployed:fantom": "ts-node ./src/tests.ts --deployed --network fantom",
    "test:task:all": "yarn test:task:fork && yarn test:task:deployed",
    "test:unit": "yarn hardhat test ./test/src/*",
    "test:unit:all": "for network in avalanche arbitrum bsc fantom gnosis goerli mainnet mumbai optimism polygon; do yarn test:unit --fork $network || exit 1; done"
  },
  "dependencies": {
    "@mimic-fi/v2-helpers": "0.1.2",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "chalk": "^4.1.1",
    "ethers": "~5.6.0",
    "hardhat": "^2.12.4",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@mimic-fi/v2-swap-connector": "^0.0.18",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.6.0",
    "@types/node-fetch": "^2.5.12",
    "@types/yargs": "^17.0.19",
    "axios": "^1.1.2",
    "chai": "^4.3.4",
    "eslint-config-mimic": "^0.0.2",
    "ethereum-waffle": "^3.4.4",
    "hardhat-local-networks-config-plugin": "^0.0.6",
    "mocha": "^6.2.3",
    "ts-node": "^8.10.2",
    "typescript": "~4.3.4",
    "yargs": "^17.6.2"
  },
  "eslintConfig": {
    "extends": "eslint-config-mimic",
    "ignorePatterns": ["dist"]
  }
}
